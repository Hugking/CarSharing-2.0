/* button start*/

.tui-btn {
    width: 100%;
    border-radius: 6rpx;
    position: relative;
    border: 0rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    padding: 0 30rpx;
    text-align: center;
    text-decoration: none;
    overflow: visible;
    margin-left: initial;
    transform: translate(0rpx, 0rpx);
    margin-right: initial;
}

.tui-btn::after {
    display: none;
}

.tui-btn-block {
    font-size: 36rpx;
    height: 90rpx;
    line-height: 90rpx;
}

.tui-white::after {
    border: 1px solid #eaeef1;
}

.tui-white-hover {
    background: #e5e5e5 !important;
    color: #2e2e2e !important;
}

.tui-dark-disabled {
    opacity: 0.6;
    color: #fafbfc !important;
}

.tui-outline-hover {
    opacity: 0.5;
}

.tui-primary-hover {
    background: #4a67d6 !important;
    color: #e5e5e5 !important;
}

.tui-primary-outline::after {
    content: " ";
    display: block;
    width: 200%;
    height: 200%;
    position: absolute;
    top: 0;
    left: 0;
    transform: scale(0.5);
    transform-origin: 0 0;
    box-sizing: border-box;
    border-radius: 12rpx;
    z-index: 1;
    pointer-events: none;
    border: 1px solid #5677fc !important;
}

.tui-primary-outline {
    color: #5677fc !important;
    background: none;
}

