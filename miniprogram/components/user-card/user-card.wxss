.container {
    background-color: #fff;
    border-radius: 15rpx;
    margin: 10rpx;
}

.list-item {
    display: flex;
    justify-content: flex-start;
    align-content: center;
    padding: 5rpx;
    margin-left: 10rpx;
}

.icon {
    display: flex;
    align-items: center;
}

.icon-dot {
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    vertical-align: middle;
    margin-right: 15rpx;
    border-radius: 20rpx;
}

.text {
    padding: 5rpx;
    flex-wrap: wrap;
}

.top-info {
    padding: 10rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.title {
    font-size: 36rpx;
    font-weight: bold;
}

.nav {
    display: flex;
    justify-content: flex-end;
    align-content: center;
    width: 20%;
    height: 50rpx;
    padding-top: 10rpx;
}

.nav-2 {
    display: flex;
    justify-content: flex-end;
    align-content: center;
    width: 10%;
    height: 50rpx;
    padding-top: 10rpx;
}

.nav-btn {
    font-size: 12px;
    color: #5677fc;
    border-radius: 0;
    background-color: #fff;
    border-radius: 0;
    margin: 0rpx;
    padding: 0rpx;
}

.nav-btn-hover {
    color: #000;
}

.nav-btn::after {
    border: none;
    border-radius: 0;
}

.user-list {
    display: flex;
    justify-content: space-around;
    align-content: center;
    padding: 5rpx;
    margin-left: 10rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.detail-all {
    width: 100%;
}

.detail {
    width: 90%;
}

.opear {
    width: 10%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.delete {
    width: 40rpx;
    height: 40rpx;
    background-size: 40rpx 40rpx;
    background-image: url('data:image/png;base64,');
}

.opear-btn {
    width: 45rpx;
    height: 45rpx;
    line-height: 20px;
    font-size: 28rpx;
    color: #fff;
    border-radius: 50%;
    background-color: var(--red);
    margin: 0rpx;
    padding: 0rpx;
}

.opear-btn-hover {
    color: #fff;
    background-color: #cc3633;
}

.opear-btn::after {
    border: none;
    border-radius: 0;
}

.user-list-item {
    display: flex;
    justify-content: flex-start;
    align-content: center;
    padding: 5rpx 0;
}

.type-0 .type-1 {
    padding-bottom: 5rpx;
}