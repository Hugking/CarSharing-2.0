    color: var(--white);
}

.bg-yellow {
    background-color: var(--yellow);
    color: var(--black);
}

.bg-olive {
    background-color: var(--olive);
    color: var(--white);
}

.bg-green {
    background-color: var(--green);
    color: var(--white);
}

.bg-cyan {
    background-color: var(--cyan);
    color: var(--white);
}

.bg-blue {
    background-color: var(--blue);
    color: var(--white);
}

.bg-purple {
