/* miniprogram/pages/my/wallet/wallet.wxss */

.container {
    background: #fafafa;
}

.bg {
    background: linear-gradient(to bottom, #0081ff, #fafafa);
    height: 200rpx;
    width: 100%;
}

.money-box {
    margin: 0 40rpx;
    background-color: #fff;
    border-radius: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: -100rpx;
}

.today-money {
    align-items: center;
    width: 50%;
    padding: 10rpx;
}

.title {
    color: #aaa;
    font-size: 24rpx;
    align-items: center;
    padding: 5rpx;
    display: flex;
    justify-content: center;
}

.balance {
    align-items: center;
    width: 50%;
    padding: 10rpx;
}

.tui-pro-price {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 5rpx;
}

.tui-price {
    font-size: 58rpx;
}

.btn-box {
    align-items: center;
    display: flex;
    justify-content: center;
}

.nav-btn {
    font-size: 12px;
    color: #0081ff;
    border-radius: 0;
    background-color: #fff;
    border-radius: 0;
    margin: 0rpx;
    padding: 0rpx;
}

.btn-box button {
    min-height: 0rpx;
}

.nav-btn-hover {
    color: #666;
}

.nav-btn::after {
    border: none;
    border-radius: 0;
}

.notice {
    padding: 10rpx;
    margin: 10rpx 40rpx;
    background: #fff;
    border-radius: 30rpx;
}

.title {
    align-items: center;
    display: flex;
    justify-content: center;
    font-size: 26rpx;
    color: #aaa;
    padding: 5rpx;
}

.content {
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: flex-start;
    color: #aaa;
    font-size: 24rpx;
    padding: 10rpx;
}